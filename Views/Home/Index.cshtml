@section Scripts {
    <script>
        $(document).ready(function(){
            $('.carousel').carousel({
                interval: 4000,
                pause: "hover"
            });

            //this is to make the parallax better while also allowing the full image to be displayed
            $(window).scroll(function() {
                $('.parallax-image, .wrapped-parallax-image').each(function() {
                    const container = $(this).parent();
                    const containerTop = container.offset().top;
                    const scrollPosition = $(window).scrollTop();
                    const windowHeight = $(window).height();

                    //this part will only be active when its in the viewport
                    if (containerTop < (scrollPosition + windowHeight) &&
                        (containerTop + container.height()) > scrollPosition) {
                        const speed = 0.15;
                        const yPos = -((scrollPosition - containerTop) * speed);
                        $(this).css('transform', `translateY(${yPos}px)`);
                    }
                });
            }).scroll(); // this only triggers on load

            // this is to preload the images 
            $('.parallax-image, .wrapped-parallax-image').each(function() {
                new Image().src = $(this).css('background-image')
                    .replace(/url\(['"]?(.*?)['"]?\)/, '$1');
            });
        });
    </script>
